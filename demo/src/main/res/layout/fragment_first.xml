<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/host"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:text="https://mobile.useriq.com/host"
            android:backgroundTint="@color/catalyst_redbox_background"
            android:hint="Host (dev/prod)"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/api"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:backgroundTint="@color/catalyst_redbox_background"
            android:hint="API key"
            android:text="c75bd9cca80e7150f3fb11c2426b37e2ce14b40a"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/userId"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/catalyst_redbox_background"
            android:hint="userId"
            android:inputType="textEmailAddress"
            android:text="user_1" />

        <EditText
            android:id="@+id/accId"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/catalyst_redbox_background"
            android:hint="accountId"
            android:inputType="text"
            android:text="acc_id_1" />

        <EditText
            android:id="@+id/accName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/catalyst_redbox_background"
            android:hint="accountName"
            android:inputType="text"
            android:text="acc_id_1" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/catalyst_redbox_background"
            android:hint="userName"
            android:inputType="text"
            android:text="Palkesh" />

        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/catalyst_redbox_background"
            android:hint="email"
            android:inputType="text"
            android:text="Palkesh@useriq.com" />

        <EditText
            android:id="@+id/signUpDate"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/catalyst_redbox_background"
            android:hint="signUpDate (10/10/2019)"
            android:inputType="text"
            android:text="10/10/2019" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_init"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/catalyst_redbox_background"
                android:elevation="7dp"
                android:padding="15dp"
                android:text="UserIQ init"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <Button
                android:id="@+id/btn_update_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/catalyst_redbox_background"
                android:elevation="7dp"
                android:padding="15dp"
                android:text="Update user"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
