<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="30dp">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Full screen"
				android:textSize="20sp" />

			<Switch
				android:id="@+id/switch_full_screen"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="30dp">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Immersive"
				android:textSize="20sp" />

			<Switch
				android:id="@+id/switch_immersive"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="30dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Hide Navigation"
				android:textSize="20sp" />

			<Switch
				android:id="@+id/switch_hide_navigation"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="30dp">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Layout Hide Navigation"
				android:textSize="20sp" />

			<Switch
				android:id="@+id/switch_layout_hide_navigation"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="30dp">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Layout Fullscreen"
				android:textSize="20sp" />

			<Switch
				android:id="@+id/switch_layout_full_screen"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="30dp">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Immersive Sticky"
				android:textSize="20sp" />

			<Switch
				android:id="@+id/switch_immersive_sticky"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center" />

		</LinearLayout>

		<Button
			android:id="@+id/button_launch"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Launch with current settings"
			android:layout_gravity="center"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			android:padding="20dp"
			android:text="@string/sample_string"/>
	</LinearLayout>
</ScrollView>