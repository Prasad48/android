<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_round"
    android:padding="6dp">


    <TextView
        android:id="@+id/tv_logo_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_logo_icon"
        android:layout_alignTop="@id/tv_logo_icon"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@+id/tv_arrow"
        android:layout_toRightOf="@id/tv_logo_icon"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="asdsaddas"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@id/tv_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:textColor="@android:color/black" />


</RelativeLayout>